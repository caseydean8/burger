<h1>Burgers!</h1>

<img src="/assets/img/burger.jpg" alt="cheeseburger">

<ul>
  {{#each burgers}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}} burger. Have I eaten this? {{this.devoured}}

        {{!-- <button data-burgerid="{{this.id}}" class="delburg">Delete</button> --}}
      </p>
    </li>
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form" action="/api/burgers" method="POST">

  <div class="form-group">
    <label for="">Burger Name:</label>
    <input type="text" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>

